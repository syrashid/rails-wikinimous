<%= form_for(article) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control', id: "editor", rows: "8"%>
  </div>

  <%= f.submit class: 'btn btn-outline-dark' %>
<% end %>

<h1 class = "mt-4">Article Preview</h1>
<div id="preview"></div>
